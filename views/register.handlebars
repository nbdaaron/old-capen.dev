{{#if error}}
	<p id="error">{{error.message}}</p>
{{else}}
	<p id="error" style="display:none;"></p>
{{/if}}
<form method="POST" onSubmit="return checkPassword(this);">
	<input type="text" name="username" placeholder="Username" required="1"></input>
	<input type="email" name="email" placeholder="E-mail Address" required="1"></input>
	<input type="password" name="password" placeholder="Password" required="1"></input>
	<input type="password" name="confirm" placeholder="Confirm Password" required="1"></input>
	<input type="submit" value="Register"></input>
</form>

<script>
	function checkPassword(form) {
		if (form.password.value != form.confirm.value) {
			document.getElementById('error').style.display = 'block';
			document.getElementById('error').innerHTML = 'Passwords do not match!';
			return false;
		}
		return true;
	}

</script>